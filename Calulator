print("Simple Calculator")
methodCalc = False
methodCalc = float(input( "1. Add 2. Substract 3. Divide 4. Multiply "))
integerOne = float(input("Please enter your first # : "))
integerTwo = float(input( "Please enter your second # : "))


while integerOne <= 0 and integerOne >= 0 and integerTwo <= 0 and integerTwo >= 0:
    if methodCalc == 1:
        finishedEquation= integerOne + integerTwo
        print(integerOne, "+", integerTwo, "equals", finishedEquation) 

    elif methodCalc == 2:
        finishedEquation= integerOne - integerTwo
        print(integerOne, "-", integerTwo, "equals", finishedEquation)

    elif methodCalc == 3:
        finishedEquation= integerOne / integerTwo
        print(integerOne, "รท", integerTwo, "equals", finishedEquation)

    elif methodCalc == 4:
        finishedEquation= integerOne + integerTwo
        print(integerOne, "ร", integerTwo, "equals", finishedEquation)
    else:
        print("Cannot Divide by 0")

else: 
 print ("This Equation is invalid.")


